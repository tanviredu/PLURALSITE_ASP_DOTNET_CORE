@page "{resturentId:int?}"  
<!-- making additional change for page and add ? to suport createoperation-->
@model OdeToFood.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Resturant.Name</h1>
<!-- All the post method will be handled by the conencted model
     and we directly change the properties of the object
    -->

<form method="post">
    <!-- make a hidden field
        why need a hidden field
        so we can directly make a object from all the value
        -->
    <input type="hidden" asp-for="@Model.Resturant.Id" />
    <div class="form-group">
        <label asp-for="Resturant.Name"></label>
        <input asp-for="Resturant.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Resturant.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Resturant.Location"></label>
        <input asp-for="Resturant.Location" class="form-control" />
        <span class="text-danger" asp-validation-for="Resturant.Location" ></span>
    </div>

    <div class="form-group">
        <!-- not working the automatic select snippet creation-->
        <label asp-for="Resturant.Cuisine"></label>
        <select class="form-control" asp-for="Resturant.Cuisine">     
            <option value="None">None</option>
            <option value="Mexican">Mexican</option>
            <option value="Italian">Italian</option>
            <option value="Indian">Indian</option>
        </select>
                </div>



    <button type="submit" class="btn btn-outline-info">Save</button>
</form>

<center>
<a asp-page="./List" class="btn btn-danger"> All Resturant</a>
</center>
